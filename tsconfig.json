  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    },
    "jsx": "react"
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
